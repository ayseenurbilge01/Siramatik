<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/resim"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/siramatik1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        android:text="Okul Numarası"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#001489" />
    <EditText
        android:id="@+id/editId"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:autoSizeMaxTextSize="100sp"
        android:background="@drawable/edittextradius"
        android:inputType="text"
        android:layout_below="@+id/txtId"
        android:hint="Okul Numarası"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:paddingLeft="15dp"/>
    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:text="Şifre"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#001489"
        android:layout_below="@+id/editId"/>

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPassword"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextradius"
        android:hint="Şifre"
        android:inputType="text"
        android:password="true"
        android:paddingLeft="15dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"/>

    <ImageView
        android:id="@+id/imageViewShowPassword"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="450dp"
        android:src="@drawable/ic_p_eye" />

    <Button
        android:id="@+id/btngiris"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="550dp"
        android:backgroundTint="#001489"
        android:text="SIRA AL"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>